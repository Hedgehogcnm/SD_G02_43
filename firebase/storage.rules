rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny all access by default
    match/{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow reading Admin collection for authentication
    match /Admin/{document} {
      allow read: if true;  // Allow reading admin documents for login
      allow write: if false; // Prevent writing (for security)
      allow update: if true;
    }
    
    // User data access rules
    match/Users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Profile images access rules
    match/profile_images/{uid}/{imageId} {
      // Allow read access to all users
      allow read: if true;
      // Allow write access only to authenticated users
      allow write: if request.auth != null;
    }
    
    // Profile images access rules [LEGACY]
    match/profile_images/{imageId} {
      // Allow read access to all users
      allow read: if true;
      // Allow write access only to authenticated users
      allow write: if request.auth != null;
    }
  }
}