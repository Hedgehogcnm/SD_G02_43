rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading Admin collection for authentication
    match /Admin/{document} {
      allow read: if true;  // Allow reading admin documents for login
      allow write: if false; // Prevent writing (for security)
      allow update: if true;
    }
    
    // Keep your existing Users rules
    match /Users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Add specific rules for FeedHistory collection
    match /FeedHistory/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Catch-all rule (consider removing this for better security)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}