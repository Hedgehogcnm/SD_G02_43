<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:ignore="SelectedPhotoAccess" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo2"
        android:supportsRtl="true"
        android:theme="@style/Theme.KaiFeedCat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ManageUserFeeder"
            android:exported="false" />
        <activity
            android:name=".ManageUserLiveCam"
            android:exported="false" />
        <activity
            android:name=".ManageUser.ManageUserChangeName"
            android:exported="false" />
        <activity
            android:name=".ManageUser.ManageUserEditUser"
            android:exported="false" />
        <activity
            android:name=".ManageUser.ManageUserAdministration"
            android:exported="false" />
        <activity
            android:name=".Specific_User.EditProfile"
            android:exported="false" />
        <activity
            android:name=".EditProfileLogics.Change_image"
            android:exported="false" />
        <activity
            android:name=".SignIn_Login_Onboarding.Onboarding"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditProfileLogics.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".EditProfileLogics.ChangeUsernameActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn_Login_Onboarding.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn_Login_Onboarding.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Specific_User.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:name=".Specific_Admin.AdminActivity"
            android:exported="false" />

        <receiver
            android:name=".Feeder.FeedingAlarmReceiver"
            android:exported="false" />
    </application>

</manifest>