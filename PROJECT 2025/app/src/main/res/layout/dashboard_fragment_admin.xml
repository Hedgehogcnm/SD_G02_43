<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/margin_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- IP Address Input -->
        <EditText
            android:id="@+id/ip_address"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:hint="Enter IP address"
            android:inputType="text"
            android:paddingStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/manual_feed"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Manual Feed Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/manual_feed"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="Manual Feed"
            android:textColor="#FFFFFF"
            app:backgroundTint="#000000"
            app:cornerRadius="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintStart_toEndOf="@id/ip_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/xxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/user_device"
            android:textColor="#000000"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:paddingStart="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/ip_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stats Cards -->
        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_elarge"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/ip_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- User Count Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/temp_user_list"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_admin_user"
                        app:tint="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Users"
                        android:textColor="#666666"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/user_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_xlarge"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Device Count Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/card_padding">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_device"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Devices"
                        android:textSize="@dimen/text_medium"
                        android:textColor="#666666"
                        android:layout_marginTop="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/device_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="@dimen/text_xlarge"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Activity Header -->
        <TextView
            android:id="@+id/activity_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Recent User Activity"
            android:textColor="#000000"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:paddingStart="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/statsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Activity Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_medium"
            app:cardElevation="@dimen/card_elevation"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/activity_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <!-- Activity Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:tint="#666666" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="john_doe"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level : Medium"
                                android:textColor="#666666"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_small"
                                android:text=" • "
                                android:textColor="#666666"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9:50 AM"
                                android:textColor="#666666"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_small"
                                android:text=" • "
                                android:textColor="#666666"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25/8/2025"
                                android:textColor="#666666"
                                android:textSize="@dimen/text_small" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
