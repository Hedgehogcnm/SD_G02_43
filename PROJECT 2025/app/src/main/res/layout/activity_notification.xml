<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium"
    tools:context=".activity_notification">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/returnButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_large"
            android:src="@drawable/return_button_foreground"
            android:contentDescription="Return"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ylarge"
            android:paddingStart="@dimen/text_zlarge"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="@dimen/text_ylarge"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/returnButton"
            app:layout_constraintTop_toTopOf="@id/returnButton"
            app:layout_constraintBottom_toBottomOf="@id/returnButton"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Filter Icon -->
    <ImageView
        android:id="@+id/filterIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_filter"
        android:contentDescription="Filter"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_xlarge" />

    <!-- First Card Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/notification_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterIcon">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Feed Icon -->
            <ImageView
                android:id="@+id/feedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Feed Icon"
                android:src="@drawable/ic_feed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/schedule_title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Feeding Notification"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/feedIcon"
                app:layout_constraintTop_toTopOf="@id/feedIcon" />

            <TextView
                android:id="@+id/schedule_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Schedule Title: "
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/schedule_title2"
                app:layout_constraintTop_toBottomOf="@id/schedule_title2" />

            <TextView
                android:id="@+id/schedule_feed_level2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Feed Level: "
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/schedule_title"
                app:layout_constraintTop_toBottomOf="@id/schedule_title" />

            <TextView
                android:id="@+id/schedule_time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/day_time"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/schedule_feed_level2"
                app:layout_constraintTop_toBottomOf="@id/schedule_feed_level2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second Card Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/alert_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/notification_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Warning Icon -->
            <ImageView
                android:id="@+id/warningIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:contentDescription="Warning Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/food_alert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Low Food Alert"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/warningIcon"
                app:layout_constraintTop_toTopOf="@id/warningIcon"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lowFood_schedule_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Schedule Title: "
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/food_alert"
                app:layout_constraintTop_toBottomOf="@id/food_alert"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/schedule_feed_level3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Feed Level: "
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/lowFood_schedule_title"
                app:layout_constraintTop_toBottomOf="@id/lowFood_schedule_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/schedule_time3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/day_time"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/schedule_feed_level3"
                app:layout_constraintTop_toBottomOf="@id/schedule_feed_level3"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
