<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn_Login_Onboarding.Onboarding">

    <!-- Onboarding Image -->
    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,3:2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_blarge"
        android:src="@drawable/onboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sign In Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_logInButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Sign In"
        android:textColor="@android:color/white"
        app:backgroundTint="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Register Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_RegisterButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Register"
        android:textColor="@android:color/white"
        app:backgroundTint="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_logInButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
