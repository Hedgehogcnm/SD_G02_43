<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/onboarding"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <!-- Use MaterialButton instead of regular Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_logInButton"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="Log In"
        android:textColor="#FFFFFF"
        app:backgroundTint="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_image" />

    <!-- Use MaterialButton instead of regular Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_RegisterButton"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        app:backgroundTint="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_logInButton" />
</androidx.constraintlayout.widget.ConstraintLayout>