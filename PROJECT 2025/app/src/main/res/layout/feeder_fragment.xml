<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f2ee"
    tools:context=".Feeder.FeederFragment">

  <!-- Device Image -->
  <ImageView
      android:id="@+id/device_pic"
      android:layout_width="156dp"
      android:layout_height="157dp"
      android:layout_marginTop="@dimen/margin_zlarge"
      android:layout_marginStart="@dimen/margin_glarge"
      android:src="@drawable/food_level_0"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Food Percentage -->
  <TextView
      android:id="@+id/foodPercentage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0%"
      android:textSize="22sp"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/margin_xsmall"
      android:layout_marginStart="@dimen/margin_xsmall"
      app:layout_constraintTop_toBottomOf="@id/device_pic"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Schedule Title -->
  <TextView
      android:id="@+id/schedule"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SCHEDULE"
      android:textSize="@dimen/text_ylarge"
      android:textColor="#704533"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/margin_medium"
      android:layout_marginStart="@dimen/margin_large"
      app:layout_constraintTop_toBottomOf="@id/foodPercentage"
      app:layout_constraintStart_toStartOf="parent" />

  <!-- Notification Icon -->
  <ImageView
      android:id="@+id/notification"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginTop="@dimen/margin_xlarge"
      android:layout_marginEnd="@dimen/margin_xlarge"
      android:src="@drawable/ic_notification"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="#704533" />

  <!-- Alarm Icon -->
  <ImageView
      android:id="@+id/alarm"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginEnd="@dimen/margin_xlarge"
      android:layout_marginTop="@dimen/margin_dlarge"
      android:src="@android:drawable/ic_lock_idle_alarm"
      app:layout_constraintBottom_toBottomOf="@id/schedule"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/notification"
      app:tint="#704533" />

  <!-- Card with Schedule List -->
  <androidx.cardview.widget.CardView
      android:id="@+id/scheduleCard"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="@dimen/margin_medium"
      android:layout_marginEnd="@dimen/margin_medium"
      android:layout_marginTop="@dimen/margin_xsmall"
      android:layout_marginBottom="@dimen/margin_alarge"
      app:cardUseCompatPadding="true"
      app:cardCornerRadius="@dimen/card_radius_small"
      app:cardElevation="@dimen/card_elevation1"
      app:layout_constraintTop_toBottomOf="@id/schedule"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

      <LinearLayout
          android:background="@drawable/card_border"
          android:id="@+id/scheduleContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp"
          app:cardBackgroundColor="@android:color/transparent">

        <!-- Schedule Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/schedule_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

          <LinearLayout
              android:background="@drawable/card_border5"
              app:cardBackgroundColor="@android:color/transparent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

            <TextView
                android:id="@+id/schedule_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title 1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/schedule_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Time: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schedule_days1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Days: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schedule_feed_level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Feed Level: "
                android:textSize="16sp" />

          </LinearLayout>
        </androidx.cardview.widget.CardView>

      <!-- Feed Schedule 2 -->
      <androidx.cardview.widget.CardView
          android:id="@+id/schedule_card2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:visibility="gone"
          app:cardBackgroundColor="@android:color/transparent"
          app:cardCornerRadius="12dp"
          app:cardElevation="0dp"
          >

        <LinearLayout
            android:background="@drawable/card_border5"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

          <TextView
              android:id="@+id/schedule_title2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Title 2"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/schedule_time2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:text="Time: "
              android:textSize="16sp" />

          <TextView
              android:id="@+id/schedule_days2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Days: "
              android:textSize="16sp" />

          <TextView
              android:id="@+id/schedule_feed_level2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Feed Level: "
              android:textSize="16sp" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- can dynamically add more schedule cards here -->
      <!-- Feed Schedule 3 -->
      <androidx.cardview.widget.CardView
          android:id="@+id/schedule_card3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:visibility="gone"
          app:cardBackgroundColor="@android:color/transparent"
          app:cardCornerRadius="12dp"
          app:cardElevation="0dp">

        <LinearLayout
            android:background="@drawable/card_border5"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

          <TextView
              android:id="@+id/schedule_title3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Title 3"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/schedule_time3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:text="Time: "
              android:textSize="16sp" />

          <TextView
              android:id="@+id/schedule_days3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Days: "
              android:textSize="16sp" />

          <TextView
              android:id="@+id/schedule_feed_level3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Feed Level: "
              android:textSize="16sp" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- for testing the ScrollView -->
      <!-- Feed Schedule 4 -->
      <androidx.cardview.widget.CardView
          android:id="@+id/schedule_card4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:visibility="gone"
          app:cardBackgroundColor="@android:color/transparent"
          app:cardCornerRadius="12dp"
          app:cardElevation="0dp">

      <LinearLayout
          android:background="@drawable/card_border5"
          app:cardBackgroundColor="@android:color/transparent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">

        <TextView
            android:id="@+id/schedule_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title 4"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Time: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schedule_days4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Days: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schedule_feed_level4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Feed Level: "
            android:textSize="16sp" />

      </LinearLayout>
      </androidx.cardview.widget.CardView>

      </LinearLayout>
    </androidx.core.widget.NestedScrollView>
  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
