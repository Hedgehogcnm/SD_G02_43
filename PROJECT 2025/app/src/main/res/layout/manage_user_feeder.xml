<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ManageUser.ManageUserFeeder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Device Image -->
        <ImageView
            android:id="@+id/device_pic"
            android:layout_width="156dp"
            android:layout_height="157dp"
            android:layout_marginTop="@dimen/margin_zlarge"
            android:layout_marginStart="@dimen/margin_glarge"
            android:src="@drawable/food_level_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Food Percentage -->
        <TextView
            android:id="@+id/foodPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginStart="@dimen/margin_xsmall"
            app:layout_constraintTop_toBottomOf="@id/device_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Schedule Title -->
        <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULE"
            android:textSize="@dimen/text_ylarge"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/foodPercentage"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/notification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:src="@drawable/ic_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#000000" />

        <!-- Alarm Icon -->
        <ImageView
            android:id="@+id/alarm"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_dlarge"
            android:src="@android:drawable/ic_lock_idle_alarm"
            app:layout_constraintBottom_toBottomOf="@id/schedule"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notification"
            app:tint="#000000" />


        <androidx.cardview.widget.CardView
            android:id="@+id/scheduleCard"
            android:layout_width="380dp"
            android:layout_height="390dp"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule">

            <androidx.core.widget.NestedScrollView
                android:layout_width="378dp"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="always">

                <LinearLayout
                    android:id="@+id/scheduleContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Feed Schedule 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/schedule_card1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_border"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/schedule_title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title 1"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/schedule_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Time: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_days1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Days: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_feed_level1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Feed Level: "
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Feed Schedule 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/schedule_card2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_border"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/schedule_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title 2"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/schedule_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Time: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_days2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Days: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_feed_level2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Feed Level: "
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- can dynamically add more schedule cards here -->
                    <!-- Feed Schedule 3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/schedule_card3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_border"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/schedule_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title 3"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/schedule_time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Time: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_days3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Days: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_feed_level3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Feed Level: "
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- for testing the ScrollView -->
                    <!-- Feed Schedule 4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/schedule_card4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_border"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/schedule_title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title 4"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/schedule_time4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Time: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_days4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Days: "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/schedule_feed_level4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Feed Level: "
                                android:textSize="16sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>